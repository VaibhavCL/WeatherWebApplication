@model WeatherWebApplication.Models.OpenWeatherMap
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<style type="text/css">

    html {
        height: 100%;
    }

    a {
        font-size: 18px;
        font-family: 'Lucida Grande';
        font-weight: normal !important;
    }

    .btn {
        width: 210px;
        padding: 4px;
        border-radius: 25px;
        background-color: transparent;
        border-color: white;
        color: white;
        border-width: 3px;
        font-weight: bold;
        font-size: 20px;
        font-family: 'Lucida Grande';
    }

    a {
        color: white;
        font-size: 15px !important;
        font-family: 'Lucida Grande';
    }

    body {
        background-image: url("~/Content/Images/background.png");
    }

    body {
        background: -webkit-linear-gradient(271deg, rgb(25, 111, 197) 10%, rgb(81, 145, 207) 51%, rgb(152, 198, 240) 89%);
        background: -o-linear-gradient(271deg, rgb(25, 111, 197) 10%, rgb(81, 145, 207) 51%, rgb(152, 198, 240) 89%);
        background: -ms-linear-gradient(271deg, rgb(25, 111, 197) 10%, rgb(81, 145, 207) 51%, rgb(152, 198, 240) 89%);
        background: -moz-linear-gradient(271deg, rgb(25, 111, 197) 10%, rgb(81, 145, 207) 51%, rgb(152, 198, 240) 89%);
        background: linear-gradient(179deg, rgb(25, 111, 197) 10%, rgb(81, 145, 207) 51%, rgb(152, 198, 240) 89%);
        background-repeat: no-repeat;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        width: 100%;
    }
</style>
<body>
    @using (Html.BeginForm())
    {<button id="reset" class="btn" name="reset">Reset »</button>}
    <div id="apiDiv">
        <h4>Select the City for Weather Report</h4>
        @using (Html.BeginForm())
        {
            foreach (var city in Model.cities)
            {
                <span>
                    @Html.RadioButtonFor(m => m.cities, city.Value) @city.Key
                </span>
            }

            <button class="btn" name="submit">Submit</button>
        }
        <div id="message">@(new HtmlString(Model.apiResponse))</div>
    </div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("input[id='cities']").change(function () {
            $(this).parents("#apiDiv").find("span").css("background", "~/Content/Images/background.png");
            $(this).parent().css("background", "#4CAF50");
        });
    });
</script>
